<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:alignmentMode="alignBounds"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.15"
        android:gravity="fill"
        android:background="#CC6600"
        android:orientation="vertical">
            <TextView android:id="@+id/tempDesejadaValor"
                android:text="26.1ºC"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="80sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_weight="2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center"
            android:background="#CC6600"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_menos"
                android:text="-"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="50dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="fill"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="#FF8000"/>
            <Button
                android:id="@+id/button_mais"
                android:text="+"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="50dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="fill"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="#FF8000"/>
            <Button
                android:id="@+id/button_ok"
                android:text="OK"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="#FF8000"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:background="#A2A2B0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="4dp">
            <TextView android:id="@+id/tempInteriorTexto"
                android:text="Sala"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tempInteriorTipo"
                android:text="Interior"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/tempInteriorHumidade"
                android:text="Humidade"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1.5">
            <TextView android:id="@+id/tempInterior"
                android:text="26.1"
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:text="ºC"
                android:gravity="center_vertical|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1.8"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:background="#A2A2B0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="4dp">
            <TextView android:id="@+id/tempExteriorTexto"
                android:text="Quarto"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tempExteriorTipo"
                android:text="Exterior"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/tempExteriorHumidade"
                android:text="Humidade"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1.5">
            <TextView android:id="@+id/tempExterior"
                android:text="26.1"
                android:gravity="center_vertical|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:text="ºC"
                android:gravity="center_vertical|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1.8"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:gravity="fill"
        android:background="#CC6600"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="fill"
            android:background="#CC6600"
            android:orientation="vertical">
            <TextView
                android:id="@+id/arCondicionadoEstado"
                android:text="OFF"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#FF8000"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arCondicionadoAction"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="fill"
            android:background="#CC6600"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/arCondicionadoAccao"
                android:visibility="visible"
                android:text="Arrefecer"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
            <Spinner
                android:layout_weight="1"
                android:id="@+id/velocidade_spinner"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
